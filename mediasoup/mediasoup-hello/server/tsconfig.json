{
   "compilerOptions": {
      "target": "ES2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "lib": ["ES2020"],
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}